<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.EditTaskActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="             任务"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/edit_task_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/study_finish"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/edit_task_start_time"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/start_time" />
                <TextView
                    android:id="@+id/edit_task_start_time_date"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="开始日期"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/edit_task_start_time_time"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/edit_task_end_time"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/end_time" />
                <TextView
                    android:id="@+id/edit_task_end_time_date"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="结束日期"
                    android:textColor="#000000"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/edit_task_end_time_time"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_task_info"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:hint="                   任务描述"
                    android:textColor="#FFAD33"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/edit_task_confirm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/send_plane" />
            </LinearLayout>

        </LinearLayout>


        <ScrollView
            android:layout_width="100dp"
            android:layout_height="400dp"
            android:layout_marginTop="55dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/edit_task_cb_study"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="学习"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/edit_task_cb_eat"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/edit_task_cb_study"
                    android:text="吃饭"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/edit_task_cb_clean"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/edit_task_cb_eat"
                    android:text="卫生"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/edit_task_cb_funny"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/edit_task_cb_clean"
                    android:text="娱乐"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/edit_task_cb_sleep"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/edit_task_cb_funny"
                    android:text="睡觉"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/edit_task_cb_running"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/edit_task_cb_sleep"
                    android:text="跑步"
                    android:enabled="false"/>
                <CheckBox
                    android:id="@+id/edit_task_cb_sports"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/edit_task_cb_running"
                    android:text="运动"
                    android:enabled="false"/>

            </RelativeLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>